{
    "compilerOptions": {
        "target": "ES6",
        "esModuleInterop": true,
        "importHelpers": true,
        "module": "ESNext",
        "strict": false,
        "moduleResolution": "node",
        "types": ["node", "jest"],
        "typeRoots": ["src/typings", "node_modules/@types"],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react",
    },
    "include": ["src"]
}